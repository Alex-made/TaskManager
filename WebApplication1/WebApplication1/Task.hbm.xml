<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    namespace="WebApplication1" assembly="WebApplication1">

  <class name="Task" table="Task">

    <!-- A 32 hex character is our surrogate key. It's automatically
            generated by NHibernate with the UUID pattern. -->
    <id name="TaskId">
      <column name="TaskId" sql-type="int" not-null="true"/>
      <generator class="identity" />
      <!--uuid.hex-->
    </id>

    <!-- A cat has to have a name, but it shouldn't be too long. -->
    <property name="Header">
      <column name="Header" length="32" not-null="true" />
    </property>

    <property name="Description">
      <column name="Description" length="32"  />
    </property>

    <property name="CompleteDate">
      <column name="CompleteDate" length="32"  />
    </property>

    <property name="Status">
      <column name="Status" length="32"  />
    </property>

    <property name="Priority">
      <column name="Priority" length="32"  />
    </property>

    <!--
    <bag name="SubTasks" inverse="false">
      <key column="TaskId"/>
      <one-to-many class="SubTask"/>
    </bag>-->

  </class>

</hibernate-mapping>